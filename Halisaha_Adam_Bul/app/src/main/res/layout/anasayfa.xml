<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr">

    <Button
        android:layout_height="150dp"
        android:id="@+id/btn_anasayfa_macbul"
        style="@android:style/Widget.Button"
        android:elevation="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:background="@drawable/imgbul"
        android:layout_alignTop="@+id/btn_anasayfa_macilaniver"
        android:layout_toRightOf="@+id/btn_anasayfa_macilaniver"
        android:layout_alignBottom="@+id/btn_anasayfa_macilaniver"
        android:layout_width="200dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="11dp"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/btn_anasayfa_profilim"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        style="@android:style/Widget.Button"
        android:background="@drawable/prfl"
        android:layout_marginBottom="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="1dp" />

    <Button
        android:layout_height="200dp"
        android:id="@+id/btn_anasayfa_bildirimler"
        style="@android:style/Widget.Button"
        android:elevation="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:background="@drawable/bldrm"
        android:layout_width="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btn_anasayfa_profilim"
        android:layout_alignTop="@+id/btn_anasayfa_profilim"
        android:paddingRight="150dp"
        android:layout_marginRight="1dp"
        android:layout_alignLeft="@+id/btn_anasayfa_macbul"
        android:layout_alignStart="@+id/btn_anasayfa_macbul" />

    <Button
        android:id="@+id/btn_anasayfa_macilaniver"
        style="@android:style/Widget.Button"
        android:elevation="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:background="@drawable/img1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/btn_anasayfa_bildirimler"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="1dp" />

    <TextView
        android:text="ANASAYFA"
        android:layout_width="wrap_content"
        android:id="@+id/textView17"
        android:background="@drawable/txtarkaplan"
        android:textColor="#000000"
        android:paddingLeft="95dp"
        android:textSize="45sp"
        android:paddingTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="60dp"
        android:textStyle="normal|bold" />

</RelativeLayout>
