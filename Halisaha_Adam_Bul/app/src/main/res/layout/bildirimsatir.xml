<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/txtarkaplan">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_bildirim_satir_kimden"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_bildirim_satir_tel"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:textStyle="normal|bold"
        android:textSize="15sp"
        android:textColor="#000000" />

    <TextView
        android:text="TextView"
        android:layout_height="wrap_content"
        android:id="@+id/txt_bildirim_satir_tarih"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_bildirim_satir_il_ilce"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:textColor="#000000"
        android:textStyle="normal|bold"
        android:textSize="15sp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_bildirim_satir_aciklama"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_marginTop="6dp"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        android:textStyle="normal|bold"
        android:textColor="#000000" />


</LinearLayout>